@model QLTYT.ViewModel.MultipleData
@{
    ViewBag.Title = "ThemVacXin";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Thêm vắc xin</title>
    <link href="~/css/asset/style1.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Thêm vắc xin
        </div>
        <form method="post" action="ThemVacXin">
            <label>Tên bệnh</label>
            <select id="disease-list" name="IdBenh">
                @foreach (var item in Model.benhs)
                {
                    <option value="@item.IdBenh">@item.TenBenh</option>
                }
            </select>
            <div class="field">
                <input type="text" name="TenVacXin">
                <label>Tên vắc xin</label>
            </div>
            <div class="field">
                <input type="text" name="LieuLuong">
                <label>Liều lượng</label>
            </div>
            <div class="field">
                <input type="text" name="DonVi">
                <label>Đơn vị</label>
            </div>
            <div class="field">
                <input type="text" name="DonGia">
                <label>Đơn giá</label>
            </div>
            <div class="field">
                <input type="text" name="SoLo">
                <label>Số lô</label>
            </div>

            <div class="field">
                <input type="submit" value="Thêm">
            </div>
            <div class="signup-link">
                <a href="/VacXin/VacXin">Quay về trang chủ</a>
            </div>
        </form>
    </div>
</body>
</html>

