  <style>
    .confirmation-box {
      position: fixed;
      z-index: 9999;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 400px;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

      .confirmation-box h3 {
        font-size: 20px;
        margin-bottom: 20px;
      }

      .confirmation-box p {
        font-size: 16px;
        margin-bottom: 20px;
      }

      .confirmation-box .button-group {
        display: flex;
        justify-content: center;
      }

        .confirmation-box .button-group button {
          margin: 0 10px;
          padding: 10px 20px;
          font-size: 16px;
        }

          .confirmation-box .button-group button.yes {
            background-color: #e74c3c;
            color: #fff;
            border: none;
          }

          .confirmation-box .button-group button.no {
            background-color: #ccc;
            color: #333;
            border: none;
          }
  </style>

  <div id="loader" style="display:none;">
    <img src="~/image/loader.gif" alt="Loading..." />
  </div>

  <script>
    $(document).ready(function () {
      function Contains(text_one, text_two) {
        if (text_one.indexOf(text_two) != -1)
          return true;
      }
      $("#Search").keyup(function () {
        var searchText = $("#Search").val().toLowerCase();
        $(".Search").each(function () {
          if (!Contains($(this).text().toLowerCase(), searchText)) {
            $(this).hide();
          }
          else {
            $(this).show();
          }
        });
      });
    });
  </script>

  <script>
    $(document).ready(function () {
      $('.delete-link').click(function (e) {
        e.preventDefault();
        var id = $(this).data('id');
        var name = $(this).data('name');
        var confirmationBoxHtml = '<div class="confirmation-box">' +
          '<h3>Xóa chi tiết phiếu tiêm chủng</h3>' +
          '<p>Bạn có chắc chắn muốn xóa chi tiết phiếu tiêm chủng của số phiếu <strong>' + name + '</strong>?</p>' +
          '<div class="button-group">' +
          '<button class="yes" data-id="' + id + '">Có</button>' +
          '<button class="no">Không</button>' +
          '</div>' +
          '</div>';
        $('body').append(confirmationBoxHtml);
        $('.yes').click(function () {
          var id = $(this).data('id');
          deleteVacXin(id);
          $('.confirmation-box').remove();
          $('#loader').show();
        });
        $('.no').click(function () {
          $('.confirmation-box').remove();
        });
      });
    });

    function deleteVacXin(id) {

      // Hiển thị loader
      $('#loader').show();

      // Xóa bệnh
      $.ajax({
        url: '/TaoPhieuTiemChung/XoaChiTietPhieuTiemChung/' + id,
        type: 'POST',
        success: function (result) {
          // Ẩn loader
          $('#loader').hide();
          // Xóa dòng thông tin bệnh trong bảng
          $('#row_' + id).remove();
        },
        error: function () {
          // Ẩn loader
          $('#loader').hide();
          alert('Đã xảy ra lỗi khi xóa chi tiết phiếu tiêm chủng!');
        }
      });

    }
  </script>





