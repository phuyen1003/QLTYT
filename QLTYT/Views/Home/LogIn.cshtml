
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/Content/Login.css">

</head>

<body class="align">


    <div class="login-box">
        <h2> ĐĂNG NHẬP</h2>
        <form action="/Home/DangNhap" method="POST" class="form login">

            <div class="user-box">
                <label for="login__username">

                </label>

                <input autocomplete="username" id="loginUsername" type="text" name="Username" class="form__input" placeholder="Username" required>
                <p class="helper helper1"></p>
                @TempData["mess1"]
            </div>


            <div class="user-box">
                <label for="login__password">

                </label>

                <input id="loginPassword" type="password" name="Password" class="form__input" placeholder="Password" required>
                @TempData["mess2"]
            </div>
            <div class="form__field">
                <input type="submit" value="Đăng nhập">
            </div>

        </form>

        <div class="text--center">

            @Html.ActionLink("Quên mật khẩu", " ForgotPassword")

        </div>
    </div>

</body>
</html>

