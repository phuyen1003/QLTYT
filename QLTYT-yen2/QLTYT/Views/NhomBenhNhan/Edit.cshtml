@model QLTYT.Models.NhomBenhNhan

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Admin.css" rel="stylesheet">
<div class="table-title">

  <h2> Chỉnh sửa thông tin nhóm bệnh nhân</h2>
  <Br>
  @using (Html.BeginForm())
  {
    @Html.AntiForgeryToken()

    <div class="form-horizontal fz-16">
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.IdNhomBenhNhan)

      <div class="form-group">
        Tên nhóm BN
        <div class="col-md-10">
          @Html.EditorFor(model => model.TenNhom, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.TenNhom, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group" style="justify-content:space-between">
        <div class="col-md-offset-2 col-md-10">
          <button class="btn btn-secondary">
            @Html.ActionLink("Quay lại", "Index")
          </button>
          <button class="btn btn-primary" type="submit" data-toggle="tooltip" data-placement="top"
                  title="Lưu ">
            Lưu
          </button>
        </div>

      </div>
    </div>
  }


</div>